<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <RelativeLayout
            android:id="@+id/rl_unregistered_vendor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        android:visibility="gone">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iv_user_icon"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_user"
            android:background="@android:color/transparent"
            app:fabCustomSize="120dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_vendor_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_user_icon"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:text="@string/vendor_registration_info"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_below="@+id/tv_vendor_info"
            android:backgroundTint="@color/colorGroceryAccent"
            android:text="@string/sell_products"
            android:onClick="openVendorScreen"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_registered_vendor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/activity_vertical_margin">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:weightSum="10">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vendor_profile"
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="2"
                        android:src="@drawable/fruits" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="6">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_vendor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:textSize="16sp"
                            android:text="Vendor Shop"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_vendor_addres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:textSize="16sp"
                            android:text="City, PinCode, Street Building, State, Country"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        android:onClick="clickedEditProfile"
                        android:background="@drawable/rounded_border"
                        android:textColor="@color/colorFriendsPrimary"
                        android:layout_weight="2"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <View
                    android:id="@+id/dash_line"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:background="@drawable/dotted_background"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/activity_horizontal_margin"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_demands"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginHorizontal="8dp"
                        android:padding="4dp"
                        android:onClick="clickedDemandCard"
                        android:foreground="@drawable/rounded_card"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="8dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_demands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/demands"
                            style="@style/TextAppearance.AppCompat.Caption"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_orders"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginHorizontal="8dp"
                        android:padding="4dp"
                        android:onClick="clickedOrdersCard"
                        android:foreground="@drawable/rounded_card"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="8dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_orders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/orders"
                            style="@style/TextAppearance.AppCompat.Caption"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_precaution"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginHorizontal="8dp"
                        android:padding="4dp"
                        android:onClick="clickedPrecautionsCard"
                        android:foreground="@drawable/rounded_card"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center">
                        <ImageView
                            android:src="@android:drawable/btn_star"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_precaution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/vendor_profile_precautions"
                            style="@style/TextAppearance.AppCompat.Caption"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_timing"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginHorizontal="8dp"
                        android:padding="4dp"
                        android:onClick="clickedTimingCard"
                        android:foreground="@drawable/rounded_card"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center">
                            <ImageView
                                android:src="@android:drawable/btn_plus"
                                android:layout_width="16dp"
                                android:layout_height="16dp"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_timing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/vendor_profile_timing"
                                style="@style/TextAppearance.AppCompat.Caption"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
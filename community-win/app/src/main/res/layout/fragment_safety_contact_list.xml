<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/activity_vertical_margin">
        <ImageView
            android:id="@+id/iv_contact_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user"/>
        <TextView
            android:id="@+id/tv_conatct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_contact_image"
            android:text="Happy Man is working here no"
            android:maxEms="10"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />
        <TextView
            android:id="@+id/tv_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:text="Since 7th"
            android:textColor="#8000"
            android:textAppearance="?attr/textAppearanceListItem"/>
        <ImageView
            android:id="@+id/iv_whats_up"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@+id/iv_messages"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_whatsapp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_messages"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_message"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
